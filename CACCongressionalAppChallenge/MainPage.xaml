<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CACCongressionalAppChallenge.MainPage">

    <Grid RowDefinitions="Auto,Auto,*"
          Padding="0">

        <Label 
            Grid.Row="0"
            Text="State Universities" 
            FontSize="32" 
            FontAttributes="Bold" 
            Margin="20"
            HorizontalOptions="Center"/>

        <SearchBar Grid.Row="1"
                   x:Name="StateSearchBar"
                   Placeholder="Search states..."
                   SearchButtonPressed="OnSearchButtonPressed"
                   TextChanged="OnSearchTextChanged"
                   Margin="20,0,20,10"/>

        <ScrollView Grid.Row="2">
            <VerticalStackLayout Padding="20" Spacing="10">

                <Button x:Name="AlabamaButton" Text="{Binding AlabamaText}" HeightRequest="50"/>
                <Button x:Name="AlaskaButton" Text="{Binding AlaskaText}" HeightRequest="50"/>
                <Button x:Name="ArizonaButton" Text="{Binding ArizonaText}" HeightRequest="50"/>
                <Button x:Name="ArkansasButton" Text="{Binding ArkansasText}" HeightRequest="50"/>
                <Button x:Name="CaliforniaButton" Text="{Binding CaliforniaText}" HeightRequest="50"/>
                <Button x:Name="ColoradoButton" Text="{Binding ColoradoText}" HeightRequest="50"/>
                <Button x:Name="ConnecticutButton" Text="{Binding ConnecticutText}" HeightRequest="50"/>
                <Button x:Name="DelawareButton" Text="{Binding DelawareText}" HeightRequest="50"/>
                <Button x:Name="FloridaButton" Text="{Binding FloridaText}" HeightRequest="50"/>
                <Button x:Name="GeorgiaButton" Text="{Binding GeorgiaText}" HeightRequest="50"/>
                <Button x:Name="HawaiiButton" Text="{Binding HawaiiText}" HeightRequest="50"/>
                <Button x:Name="IdahoButton" Text="{Binding IdahoText}" HeightRequest="50"/>
                <Button x:Name="IllinoisButton" Text="{Binding IllinoisText}" HeightRequest="50"/>
                <Button x:Name="IndianaButton" Text="{Binding IndianaText}" HeightRequest="50"/>
                <Button x:Name="IowaButton" Text="{Binding IowaText}" HeightRequest="50"/>
                <Button x:Name="KansasButton" Text="{Binding KansasText}" HeightRequest="50"/>
                <Button x:Name="KentuckyButton" Text="{Binding KentuckyText}" HeightRequest="50"/>
                <Button x:Name="LouisianaButton" Text="{Binding LouisianaText}" HeightRequest="50"/>
                <Button x:Name="MaineButton" Text="{Binding MaineText}" HeightRequest="50"/>
                <Button x:Name="MarylandButton" Text="{Binding MarylandText}" HeightRequest="50"/>
                <Button x:Name="MassachusettsButton" Text="{Binding MassachusettsText}" HeightRequest="50"/>
                <Button x:Name="MichiganButton" Text="{Binding MichiganText}" HeightRequest="50"/>
                <Button x:Name="MinnesotaButton" Text="{Binding MinnesotaText}" HeightRequest="50"/>
                <Button x:Name="MississippiButton" Text="{Binding MississippiText}" HeightRequest="50"/>
                <Button x:Name="MissouriButton" Text="{Binding MissouriText}" HeightRequest="50"/>
                <Button x:Name="MontanaButton" Text="{Binding MontanaText}" HeightRequest="50"/>
                <Button x:Name="NebraskaButton" Text="{Binding NebraskaText}" HeightRequest="50"/>
                <Button x:Name="NevadaButton" Text="{Binding NevadaText}" HeightRequest="50"/>
                <Button x:Name="NewHampshireButton" Text="{Binding NewHampshireText}" HeightRequest="50"/>
                <Button x:Name="NewJerseyButton" Text="{Binding NewJerseyText}" HeightRequest="50"/>
                <Button x:Name="NewMexicoButton" Text="{Binding NewMexicoText}" HeightRequest="50"/>
                <Button x:Name="NewYorkButton" Text="{Binding NewYorkText}" HeightRequest="50"/>
                <Button x:Name="NorthCarolinaButton" Text="{Binding NorthCarolinaText}" HeightRequest="50"/>
                <Button x:Name="NorthDakotaButton" Text="{Binding NorthDakotaText}" HeightRequest="50"/>
                <Button x:Name="OhioButton" Text="{Binding OhioText}" HeightRequest="50"/>
                <Button x:Name="OklahomaButton" Text="{Binding OklahomaText}" HeightRequest="50"/>
                <Button x:Name="OregonButton" Text="{Binding OregonText}" HeightRequest="50"/>
                <Button x:Name="PennsylvaniaButton" Text="{Binding PennsylvaniaText}" HeightRequest="50"/>
                <Button x:Name="RhodeIslandButton" Text="{Binding RhodeIslandText}" HeightRequest="50"/>
                <Button x:Name="SouthCarolinaButton" Text="{Binding SouthCarolinaText}" HeightRequest="50"/>
                <Button x:Name="SouthDakotaButton" Text="{Binding SouthDakotaText}" HeightRequest="50"/>
                <Button x:Name="TennesseeButton" Text="{Binding TennesseeText}" HeightRequest="50"/>
                <Button x:Name="TexasButton" Text="{Binding TexasText}" HeightRequest="50"/>
                <Button x:Name="UtahButton" Text="{Binding UtahText}" HeightRequest="50"/>
                <Button x:Name="VermontButton" Text="{Binding VermontText}" HeightRequest="50"/>
                <Button x:Name="VirginiaButton" Text="{Binding VirginiaText}" HeightRequest="50"/>
                <Button x:Name="WashingtonButton" Text="{Binding WashingtonText}" HeightRequest="50"/>
                <Button x:Name="WestVirginiaButton" Text="{Binding WestVirginiaText}" HeightRequest="50"/>
                <Button x:Name="WisconsinButton" Text="{Binding WisconsinText}" HeightRequest="50"/>
                <Button x:Name="WyomingButton" Text="{Binding WyomingText}" HeightRequest="50"/>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>